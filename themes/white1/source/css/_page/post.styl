/* 代码高亮 */
pre 
  .hljs 
    border-radius 8px
code,kbd,pre,samp 
  font-size 1em
  font-weight normal
  font-family hack-regular,hack-italic,hack-bold,hack-bolditalic
.hljs 
  font-family hack-regular,hack-italic,hack-bold,hack-bolditalic
  overflow scroll
  font-size 1em
  span 
    font-family hack-regular,hack-italic,hack-bold,hack-bolditalic
.hljs,code 
  font-weight normal
/* 小代码段 */
code 
  font-size 0.8em
  font-weight 1000
  background-color $color-theme-secondary
  color $color-theme-main
  border-radius 5px
  padding 4px 6px
  margin 0px 4px
  font-family hack-regular,hack-italic,hack-bold,hack-bolditalic
/* toc */
/* 位于文章上方的toc */
.toc-top 
  border 1px solid #e3e3e3
  border-radius 4px
  padding 20px 40px
  list-style disc
  margin-bottom 20px
  .toc-top-link 
    font-size 0.9em
    transition all .4s
    &:hover 
      text-decoration none
.toc-top-child 
  list-style disc
