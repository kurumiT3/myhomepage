.post-content-outer 
  margin-top 50px
  display flex
  justify-content center
.post-content-inner 
  width 800px
  margin-bottom 100px
  line-height 1.7
  h2 
    margin-top 20px
    margin-bottom 20px
    font-size 1.7em
    &::after 
      content "#"
      display inline-block
      mix-blend-mode multiply
      color #e3e3e3
      margin-left 0.5rem
      transition all 0.5s ease 0s
  h3 
    margin-top 20px
    margin-bottom 20px
    font-size 1.55em
  h4 
    margin-top 20px
    margin-bottom 20px
    font-size 1.3em
  h5 
    font-size 1em
    line-height 3
  h6 
    font-size 1em
    font 1em sans-serif
    line-height 3
  blockquote 
    border-left 4px solid $color-theme-main
    padding-left 17px
    color #555555
    font-size 0.9em
    & > p 
      margin-top 10px
      margin-bottom 10px
      line-height 1.65
  a 
    color $color-theme-main
    &:hover 
      text-decoration underline
  img 
    width auto
    max-width 100%
    margin 1.1em auto
    display block
    border-radius 4px
  p 
    line-height 2
    & > strong 
      color $color-theme-main
      display inline-block
      box-shadow inset 0 -0.2em 0 $color-theme-main
  hr 
    margin-top 30px
    margin-bottom 30px
    height 3px
    border none
    background-color #e3e3e3
  pre 
    margin-top 10px
    margin-bottom 10px
    line-height 1.6
/* 规范各个标题的大小 */
.post-content-inner h2,h3,h4,h5,h6 
  color $color-text-main
  font-weight normal
